# frozen_string_literal: true

# Datamapper support was depcreated in Ruby agent 8.7.0
# We no longer test it, but keep the instrumentation around
suite_condition("Skipping tests. Datamapper support was deprecated in Ruby agent 8.7.0") { false }

adapter_gems = <<~RB
  gem 'dm-sqlite-adapter'

  # Pin this version as the adapter breaks with later ones
  gem 'jdbc-sqlite3', '~> 3.7.2.1', :platforms => [:jruby]

  # Needed for the fake collector
  gem 'rack'
RB

gemfile <<~RB
  gem 'datamapper', '~> 1.2.0', :require => 'data_mapper'
  gem 'dm-ar-finders', '~> 1.2.0'
  gem 'addressable', :require => 'addressable/uri'
  #{adapter_gems}
RB
