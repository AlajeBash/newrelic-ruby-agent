if RUBY_VERSION >= '2.2.2'
  gemfile <<-RB
    gem 'rack'
    gem 'redis', '~>4.0.1'
  RB
end

gemfile <<-RB
  gem 'rack'
  gem 'redis', '~>3.3.5'
RB

gemfile <<-RB
  gem 'rack'
  gem 'redis', '~>3.2.2'
RB

gemfile <<-RB
  gem 'rack'
  gem 'redis', '~>3.1.0'
RB

gemfile <<-RB
  gem 'rack'
  gem 'redis', '3.0.7' # oldest supported minor version
RB

gemfile <<-RB
  gem 'rack'
  gem 'redis', '2.2.2' # newest unsupported version
RB

