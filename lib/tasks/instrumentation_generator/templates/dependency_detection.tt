require_relative '<%= @name.downcase %>/instrumentation'
require_relative '<%= @name.downcase %>/chain'
require_relative '<%= @name.downcase %>/prepend'

DependencyDetection.defer do
  named :<%= @name.downcase %>

  depends_on do
    # The class that needs to be defined to prepend/chain onto. This can be used
    # to determine whether the library is installed.
    defined?(::<%= @name.capitalize %>)
    # Add any additional requirements to verify whether this instrumentation
    # should be installed
  end

  executes do
    ::NewRelic::Agent.logger.info "Installing <%= @name.capitalize %> instrumentation"

    if use_prepend?
      prepend_instrument ::<%= @name.capitalize %>, NewRelic::Agent::Instrumentation::<%= @name.capitalize %>::Prepend
    else
      chain_instrument NewRelic::Agent::Instrumentation::<%= @name.capitalize %>
    end
  end
end
